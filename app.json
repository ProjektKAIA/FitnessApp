{
  "expo": {
    "name": "ShapyFit",
    "slug": "shapyfit",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "minSdkVersion": 26
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ],
      [
        "expo-health-connect",
        {
          "requestPermissionsOnLaunch": false
        }
      ],
      "react-native-health"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "de.shapyfit.app",
      "infoPlist": {
        "NSHealthShareUsageDescription": "Diese App benötigt Zugriff auf Ihre Gesundheitsdaten, um Ihre Fitness-Fortschritte zu verfolgen und personalisierte Empfehlungen zu geben.",
        "NSHealthUpdateUsageDescription": "Diese App möchte Ihre Trainings- und Aktivitätsdaten in Apple Health speichern.",
        "NSUserTrackingUsageDescription": "Wir verwenden Tracking-Daten, um dir personalisierte Inhalte und Werbung anzuzeigen und unsere App zu verbessern.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "entitlements": {
        "com.apple.developer.healthkit": true,
        "com.apple.developer.healthkit.access": [
          "health-records",
          "health-records"
        ],
        "com.apple.developer.healthkit.background-delivery": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "de.shapyfit.app",
      "permissions": [
        "android.permission.health.READ_STEPS",
        "android.permission.health.READ_DISTANCE",
        "android.permission.health.READ_TOTAL_CALORIES_BURNED",
        "android.permission.health.READ_HEART_RATE",
        "android.permission.health.READ_RESTING_HEART_RATE",
        "android.permission.health.READ_EXERCISE",
        "android.permission.health.READ_ACTIVE_CALORIES_BURNED",
        "android.permission.ACTIVITY_RECOGNITION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "a2d20230-1d6a-4a43-ad5b-38cc38dba18a"
      }
    }
  }
}
